<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension-point id="eu.geclipse.ui.authTokenUI" 
   	name="%extension-point.name.authenticationToken" 
   	schema="schema/eu.geclipse.ui.AuthTokenUIFactory.exsd"/>
   <extension-point id="eu.geclipse.ui.connectionWizard" 
   	name="%extension-point.name.connectionWizard" 
   	schema="schema/eu.geclipse.ui.connection.connectionWizard.exsd"/>
   <extension-point id="eu.geclipse.ui.extensionWizard" 
   	name="%extension-point.name.comboWizard" 
   	schema="schema/eu.geclipse.ui.extensionWizard.exsd"/>

   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="eu.geclipse.ui.internal.preference.GEclipsePreferencePage"
            id="eu.geclipse.ui.internal.preference.GEclipsePreferencePage"
            name="%preferences.name.geclipse"/>
      <page
            category="eu.geclipse.ui.internal.preference.GEclipsePreferencePage"
            class="eu.geclipse.ui.internal.preference.VoPreferencePage"
            id="eu.geclipse.ui.internal.preference.VOPreferencePage"
            name="%preferences.name.vodeclarations"/>
      <page
            category="eu.geclipse.ui.internal.preference.GEclipsePreferencePage"
            class="eu.geclipse.ui.internal.preference.CaCertPreferencePage"
            id="eu.geclipse.ui.internal.preference.CaCertPreferencePage"
            name="%page.caCertificates"/>
      <page
            category="eu.geclipse.ui.internal.preference.GEclipsePreferencePage"
            class="eu.geclipse.ui.internal.preference.NetworkPreferencePage"
            id="eu.geclipse.ui.internal.preference.NetworkPreferencePage"
            name="%page.network"/>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="eu.geclipse.ui.viewcategory"
            class="eu.geclipse.ui.views.AuthTokenView"
            id="eu.geclipse.ui.views.authenticationTokenView"
            name="%view.authenticationToken"/>
      <category
            id="eu.geclipse.ui.viewcategory"
            name="%category.name.0"/>
      <view
            category="eu.geclipse.ui.viewcategory"
            class="eu.geclipse.ui.views.GridProjectView"
            icon="icons/geclipse16.gif"
            id="eu.geclipse.ui.views.gridProjectView"
            name="%view.gridProject"/>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="eu.geclipse.ui.internal.UserPerspectiveFactory"
            fixed="false"
            icon="icons/geclipse16.gif"
            id="eu.geclipse.ui.userPerspective"
            name="%perspective.user.name"/>
      <perspective
            class="eu.geclipse.ui.internal.OperatorPerspectiveFactory"
            fixed="false"
            icon="icons/geclipse16.gif"
            id="eu.geclipse.ui.operatorPerspective"
            name="%perspective.operator.name"/>
      <perspective
            class="eu.geclipse.ui.internal.DeveloperPerspectiveFactory"
            fixed="false"
            icon="icons/geclipse16.gif"
            id="eu.geclipse.ui.developerPerspective"
            name="%perspective.developer.name"/>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="eu.geclipse.ui.viewcategory"
            class="eu.geclipse.ui.views.gexplorer.GExplorerView"
            id="eu.geclipse.ui.views.gExplorer"
            name="%view.gExplorer"/>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="eu.geclipse.ui.newResourceCategory"
            name="%category.name.0"/>
      <wizard
            canFinishEarly="false"
            category="eu.geclipse.ui.newResourceCategory"
            class="eu.geclipse.ui.wizards.jobs.NewJobWizard"
            finalPerspective="eu.geclipse.ui.gEclipsePerspective"
            hasPages="true"
            icon="icons/geclipse16.gif"
            id="eu.geclipse.ui.wizards.gridJobWizard"
            name="%wizard.gridJob"
            preferredPerspectives="eu.geclipse.ui.gEclipsePerspective">
         <description>
            %wizard.gridJob.createJobDescription
         </description>
      </wizard>
      <wizard
            canFinishEarly="true"
            category="eu.geclipse.ui.newResourceCategory"
            class="eu.geclipse.ui.wizards.NewGridProjectWizard"
            finalPerspective="eu.geclipse.ui.gEclipsePerspective"
            hasPages="true"
            icon="icons/geclipse16.gif"
            id="eu.geclipse.ui.wizards.gridProjectWizard"
            name="%wizard.gridProject"
            preferredPerspectives="eu.geclipse.ui.gEclipsePerspective"
            project="true">
         <description>
            %wizard.gridProject.createProject
         </description>
      </wizard>
      <wizard
            canFinishEarly="true"
            category="eu.geclipse.ui.newResourceCategory"
            class="eu.geclipse.ui.wizards.connection.ConnectionWizard"
            finalPerspective="eu.geclipse.ui.gEclipsePerspective"
            hasPages="true"
            icon="icons/geclipse16.gif"
            id="eu.geclipse.ui.wizards.connectionWizard"
            name="%wizard.gridConnection"
            preferredPerspectives="eu.geclipse.ui.gEclipsePerspective">
         <description>
            %wizard.gridConnection.createFS
         </description>
      </wizard>
   </extension>
   <extension
         point="eu.geclipse.ui.connectionWizard">
      <wizardPagesManager
            class="eu.geclipse.ui.wizards.connection.managers.gridftp.GridFTPConnectionWizardManager"
            id="eu.geclipse.core.connectionProtocol.gridftp"/>
   </extension>
   <extension
         point="eu.geclipse.ui.connectionWizard">
      <wizardPagesManager
            class="eu.geclipse.ui.wizards.connection.managers.local.LocalConnectionWizardManager"
            id="eu.geclipse.core.connectionProtocol.local"/>
   </extension>
   <extension
         id="eu.geclipse.ui.tokenProvider"
         name="%extension.name.0"
         point="eu.geclipse.core.authenticationTokenManagement">
      <provider
            class="eu.geclipse.ui.UIAuthTokenProvider"
            priority="999"/>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="eu.geclipse.ui.editors.JobDescriptionEditor"
            default="true"
            extensions="jsdl"
            icon="icons/jsdlfile.gif"
            id="eu.geclipse.ui.jobdescriptioneditor"
            name="%editor.gridJobDescriptionEditor"/>
   </extension>
   <extension
         id="eu.geclipse.ui.wizards.gridProxyWizard"
         name="%extension.name.1"
         point="eu.geclipse.ui.extensionWizard">
      <manager
            class="eu.geclipse.ui.wizards.GridProxyWizardPageManager"
            id="eu.geclipse.ui.wizards.gridProxyWizardPageManager"/>
   </extension>
   <extension
         point="org.eclipse.ui.ide.projectNatureImages">
      <image
            natureId="eu.geclipse.core.project.GridProjectNature"
            icon="icons/project_overlay.gif"
            id="eu.geclipse.ui.NatureImage"/>
   </extension>
</plugin>

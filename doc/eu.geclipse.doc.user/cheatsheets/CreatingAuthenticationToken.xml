<?xml version="1.0" encoding="UTF-8"?>
<cheatsheet title="Creating an Authentication Token">
   <intro href="/eu.geclipse.doc.user/html/gettingstarted/AuthenticationTokens.html">
      <description>
          This cheat sheet will show you how to create your authentication token.<br/>
      </description>
   </intro>

   <item title="Open the g-Eclipse perspective" skip="true">
      <description>
          If you're not already in the g-Eclipse user perspective, in the main menu
          select <b>Window &gt; Open Perspective &gt; Other...</b> and then select
          <b>g-Eclipse (User)</b>. Alternatively, click on the &quot;Click to Perform&quot; link below.
      </description>
          <action
                  pluginId="org.eclipse.ui.cheatsheets"
                          class="org.eclipse.ui.internal.cheatsheets.actions.OpenPerspective"
                          param1="eu.geclipse.ui.userPerspective"/>
   </item>

   <item title="Select the Authentication Tokens View" skip="true">
      <description>
          Select the <b>Authentication Tokens</b> tab in the bottom panel view.<br/>
      </description>
      <command serialization="org.eclipse.ui.views.showView(org.eclipse.ui.views.showView.viewId=eu.geclipse.ui.views.authenticationTokenView)"/>
   </item>

   <item title="Open the Authentication Token Wizard" dialog="true">
        <description>
          Open the <b>New Authentication Token</b> wizard by cliking the
          <b>Click to Perform</b>.<br/>
          This action bypasses the need to click the <b>New</b> button located in
          the top right corner of the <b>Authentication Tokens</b> panel view and 
          allows you to continue to follow this cheatsheet while working with the 
          wizard.<br/>
    	</description>
    	<action confirm="true"
          pluginId="eu.geclipse.ui"
                  class="eu.geclipse.ui.cheatsheets.OpenAuthTokenDialogAction"
                  param1="Grid Proxy"/>
   </item>

   <item title="Select the Authentication Token Type">
      <description>
          Choose from the list of available token types and click <b>Next</b>.
      </description>
   </item>

   <item title="Enter Authentication Information">
      <description>
          Follow these simple steps to create your proxy.
      </description>
                <conditional-subitem condition="${var1}">
                        <subitem when="gridProxyPage" label="Specify the location of your key and certificate."/>
                        <subitem when="voOPage" label="If there is no VOMS Proxy available in the list, click the New VO button and specify the required VO infromation and click Finish."/>
                        <subitem when="null" label="If you are seeing this, you must have gotten ahead of yourself by opening cheatsheet items without following with the wizard."/>
                </conditional-subitem>
                <conditional-subitem condition="${var1}">
                        <subitem when="gridProxyPage" label="Enter your key passphrase."/>
                        <subitem when="voOPage" label="Select a VOMS Proxy from the list of available VOs."/>
                        <subitem when="null" label="You will not be able to read the steps unles you restart this cheatsheet and make the selection between Grid and VOMS proxy prior to opening this item."/>
                </conditional-subitem>
                <!--<conditional-subitem condition="${var2}">
                        <subitem when="vomsVO" label="Specify a name, host, port, host DN, Information system endpoint, and the VO server URL."/>
                        <subitem when="null" label="no data"/>
                </conditional-subitem>-->
                <conditional-subitem condition="${var1}">
                        <subitem when="gridProxyPage" label="Adjust how long will the proxy be valid."/>
                        <subitem when="voOPage" label="Enter your key passphrase."/>
                        <subitem when="null" label="no data"/>
                </conditional-subitem>
                <conditional-subitem condition="${var1}">
                        <subitem when="gridProxyPage" label="Click finish to create and validate the proxy."/>
                        <subitem when="voOPage" label="Click finish to validate the proxy."/>
                        <subitem when="null" label="no data"/>
                </conditional-subitem>
   </item>

   <item title="Activate Your Token">
      <description>Highlight your newly created token listed in the <b>Authentication Tokens</b>
                panel view and click this <b>Activation</b> button.<br/>
      </description>
      <subitem label="Click on the token entry to make the activation button (pedlock) in the top right part of this panel view visible."/>
      <subitem label="Click this pedlock to initiate the activation of your token."/>
   </item>
   
</cheatsheet>









